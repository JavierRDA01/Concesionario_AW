<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>Gestión de Concesionarios - Admin</title>
</head>
<body class="bg-light">
    
    <%- include('./barraNavegadora.ejs') %>

    <div class="container-fluid my-4">
        <div class="row">
            <div class="col-md-2 d-none d-md-block bg-white sidebar p-3 shadow-sm rounded me-3" style="min-height: 80vh;">
                <h5 class="text-muted">Menú Admin</h5>
                <hr>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2"><a href="/admin/dashboard" class="nav-link text-dark"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                    <li class="nav-item mb-2"><a href="/admin/vehicles" class="nav-link text-dark"><i class="bi bi-car-front"></i> Gestión de Flota</a></li>
                    <li class="nav-item mb-2">
                        <a href="/admin/dealerships" class="nav-link active text-danger fw-bold bg-light rounded">
                            <i class="bi bi-building"></i> Concesionarios
                        </a>
                    </li>
                    <li class="nav-item mb-2"><a href="/admin/users" class="nav-link text-dark"><i class="bi bi-people"></i> Usuarios</a></li>
                    <li class="nav-item mb-2"><a href="/admin/reservations" class="nav-link text-dark"><i class="bi bi-calendar-check"></i> Reservas</a></li>
                    <li class="nav-item mb-2"><a href="/admin/import" class="nav-link text-dark"><i class="bi bi-cloud-upload"></i> Carga de Datos</a></li>
                </ul>
            </div>

            <main class="col-md-9 ms-sm-auto col-lg-9 px-md-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="text-dark">Gestión de Concesionarios</h2>
                    <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modalNuevoConcesionario">
                        <i class="bi bi-plus-circle"></i> Nuevo Concesionario
                    </button>
                </div>

                <div id="alertaDinamica"></div>
                
                <div class="card shadow-sm border-top">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0 align-middle">
                                <thead class="bg-dark text-white">
                                    <tr>
                                        <th>ID</th>
                                        <th>Nombre</th>
                                        <th>Ciudad</th>
                                        <th>Dirección</th>
                                        <th>Teléfono</th>
                                    </tr>
                                </thead>
                                <tbody id="tbodyConcesionarios">
                                    <% if(concesionarios.length === 0) { %>
                                        <tr id="filaSinDatos"><td colspan="5" class="text-center py-3">No hay concesionarios registrados.</td></tr>
                                    <% } else { %>
                                        <% concesionarios.forEach(c => { %>
                                            <tr>
                                                <td>#<%= c.id_concesionario %></td>
                                                <td class="fw-bold text-danger"><%= c.nombre %></td>
                                                <td><span class="badge bg-light text-dark border"><%= c.ciudad %></span></td>
                                                <td><small class="text-muted"><i class="bi bi-geo-alt"></i> <%= c.direccion %></small></td>
                                                <td><%= c.telefono_contacto || '-' %></td>
                                            </tr>
                                        <% }) %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <div class="modal fade" id="modalNuevoConcesionario" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="bi bi-building-add"></i> Alta de Concesionario</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                
                <form id="formNuevoConcesionario">
                    <div class="modal-body">
                        <div id="errorModal" class="alert alert-danger d-none"></div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Nombre del Concesionario <span class="text-danger">*</span></label>
                            <input type="text" name="nombre" class="form-control" placeholder="Ej: Wibble Madrid Norte" required>
                        </div>
                        <div class="row g-2 mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Ciudad <span class="text-danger">*</span></label>
                                <input type="text" name="ciudad" class="form-control" placeholder="Ej: Madrid" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Teléfono</label>
                                <input type="tel" name="telefono" class="form-control" placeholder="Ej: 910000000">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Dirección Completa <span class="text-danger">*</span></label>
                            <input type="text" name="direccion" class="form-control" placeholder="Calle, número, código postal..." required>
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" id="btnGuardar" class="btn btn-danger">Guardar Concesionario</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="/js/jquery.min.js"></script> <script src="/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function() {
            
            $("#btnGuardar").click(function(e) {
                e.preventDefault();
                
                const $btn = $(this);
                const $errorAlert = $("#errorModal");
                
                // Recoger datos del formulario manualmente
                // Nota: SerializeArray o la construcción manual de objeto es típica en jQuery
                const datos = {
                    nombre: $('input[name="nombre"]').val(),
                    ciudad: $('input[name="ciudad"]').val(),
                    telefono: $('input[name="telefono"]').val(),
                    direccion: $('input[name="direccion"]').val()
                };

                // Validar campos vacíos en cliente (opcional pero recomendado)
                if(!datos.nombre || !datos.ciudad || !datos.direccion) {
                    $errorAlert.text("Por favor, rellena los campos obligatorios.").removeClass("d-none");
                    return;
                }

                // Estado de carga
                $btn.prop("disabled", true).html('<span class="spinner-border spinner-border-sm"></span> Guardando...');
                $errorAlert.addClass("d-none");

                // LLAMADA AJAX (Formato Presentación)
                $.ajax({
                    type: "POST",
                    url: "/admin/dealerships/new",
                    contentType: "application/json",
                    data: JSON.stringify(datos),
                    
                    success: function(data, textStatus, jqXHR) {
                        if (data.success) {
                            // 1. Cerrar modal (Usamos API de Bootstrap nativa o wrapper jQuery si disponible)
                            const modalElement = document.getElementById('modalNuevoConcesionario');
                            const modalInstance = bootstrap.Modal.getInstance(modalElement);
                            modalInstance.hide();

                            // 2. Resetear formulario
                            $('#formNuevoConcesionario')[0].reset();

                            // 3. Añadir fila a la tabla
                            $('#filaSinDatos').remove(); // Si existía, fuera

                            const nuevaFila = `
                                <tr class="table-success">
                                    <td>#${data.concesionario.id_concesionario}</td>
                                    <td class="fw-bold text-danger">${data.concesionario.nombre}</td>
                                    <td><span class="badge bg-light text-dark border">${data.concesionario.ciudad}</span></td>
                                    <td><small class="text-muted"><i class="bi bi-geo-alt"></i> ${data.concesionario.direccion}</small></td>
                                    <td>${data.concesionario.telefono_contacto || '-'}</td>
                                </tr>
                            `;
                            
                            $('#tbodyConcesionarios').append(nuevaFila);

                            // Quitar color verde tras 2 segundos
                            setTimeout(function() {
                                $('#tbodyConcesionarios tr:last-child').removeClass('table-success');
                            }, 2000);

                            // Alerta de éxito
                            $('#alertaDinamica').html(`
                                <div class="alert alert-success alert-dismissible fade show shadow-sm border-start border-success border-4" role="alert">
                                    <i class="bi bi-check-circle-fill"></i> Concesionario creado correctamente.
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            `);

                        } else {
                            // Error de lógica (ej. validación servidor)
                            $errorAlert.text(data.message).removeClass('d-none');
                        }
                    },
                    
                    error: function(jqXHR, textStatus, errorThrown) {
                        // Error de red o servidor (500, 404, etc.)
                        let msg = "Error de conexión con el servidor.";
                        if (jqXHR.responseJSON && jqXHR.responseJSON.message) {
                            msg = jqXHR.responseJSON.message;
                        }
                        $errorAlert.text(msg).removeClass('d-none');
                    },
                    
                    complete: function() {
                        // Restaurar botón siempre
                        $btn.prop("disabled", false).text("Guardar Concesionario");
                    }
                });
            });
        });
    </script>
</body>
</html>