<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>Gestión de Concesionarios - Admin</title>
</head>
<body class="bg-light">
    
    <%- include('./barraNavegadora.ejs') %>

    <div class="container-fluid my-4">
        <div class="row">
            <div class="col-md-2 d-none d-md-block bg-white sidebar p-3 shadow-sm rounded me-3" style="min-height: 80vh;">
                <h5 class="text-muted">Menú Admin</h5>
                <hr>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a href="/admin/dashboard" class="nav-link text-dark">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/vehicles" class="nav-link text-dark">
                            <i class="bi bi-car-front"></i> Gestión de Flota
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/dealerships" class="nav-link active text-danger fw-bold bg-light rounded">
                            <i class="bi bi-building"></i> Concesionarios
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/users" class="nav-link text-dark">
                            <i class="bi bi-people"></i> Usuarios
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/reservations" class="nav-link text-dark">
                            <i class="bi bi-calendar-check"></i> Reservas
                        </a>
                    </li>
                </ul>
            </div>

            <main class="col-md-9 ms-sm-auto col-lg-9 px-md-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="text-dark">Gestión de Concesionarios</h2>
                    <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modalNuevoConcesionario">
                        <i class="bi bi-plus-circle"></i> Nuevo Concesionario
                    </button>
                </div>

                <% if (locals.error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0 align-middle">
                                <thead class="bg-dark text-white">
                                    <tr>
                                        <th>ID</th>
                                        <th>Nombre</th>
                                        <th>Ciudad</th>
                                        <th>Dirección</th>
                                        <th>Teléfono</th>
                                        <th class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(concesionarios.length === 0) { %>
                                        <tr><td colspan="6" class="text-center py-3">No hay concesionarios registrados.</td></tr>
                                    <% } else { %>
                                        <% concesionarios.forEach(c => { %>
                                        <tr>
                                            <td>#<%= c.id_concesionario %></td>
                                            <td class="fw-bold"><%= c.nombre %></td>
                                            <td><span class="badge bg-light text-dark border"><%= c.ciudad %></span></td>
                                            <td><small class="text-muted"><i class="bi bi-geo-alt"></i> <%= c.direccion %></small></td>
                                            <td><%= c.telefono_contacto || '-' %></td>
                                            <td class="text-end">
                                                <button class="btn btn-sm btn-outline-dark" title="Editar"><i class="bi bi-pencil"></i></button>
                                                <button class="btn btn-sm btn-outline-danger" title="Eliminar"><i class="bi bi-trash"></i></button>
                                            </td>
                                        </tr>
                                        <% }) %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <div class="modal fade" id="modalNuevoConcesionario" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="bi bi-building-add"></i> Alta de Concesionario</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/admin/dealerships/new" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Nombre del Concesionario <span class="text-danger">*</span></label>
                            <input type="text" name="nombre" class="form-control" placeholder="Ej: Wibble Madrid Norte" required>
                        </div>
                        <div class="row g-2 mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Ciudad <span class="text-danger">*</span></label>
                                <input type="text" name="ciudad" class="form-control" placeholder="Ej: Madrid" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Teléfono</label>
                                <input type="tel" name="telefono" class="form-control" placeholder="Ej: 910000000">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Dirección Completa <span class="text-danger">*</span></label>
                            <input type="text" name="direccion" class="form-control" placeholder="Calle, número, código postal..." required>
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-danger">Guardar Concesionario</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>