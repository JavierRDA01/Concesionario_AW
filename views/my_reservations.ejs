<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>Mis Reservas - WibbleUCM</title>
</head>
<body class="bg-light">
    
    <%- include('./barraNavegadora.ejs') %>

    <div class="container-fluid my-4">
        <div class="row">
            <div class="col-md-2 d-none d-md-block bg-white sidebar p-3 shadow-sm rounded me-3" style="min-height: 80vh;">
                <h5 class="text-muted">Mi Espacio</h5>
                <hr>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2"><a href="/users/dashboard" class="nav-link text-dark"><i class="bi bi-speedometer2"></i> Mi Dashboard</a></li>
                    <li class="nav-item mb-2"><a href="/vehicles" class="nav-link text-dark"><i class="bi bi-ev-front"></i> Vehículos Disponibles</a></li>
                    <li class="nav-item mb-2"><a href="/reservations/new" class="nav-link text-dark"><i class="bi bi-plus-circle"></i> Nueva Reserva</a></li>
                    <li class="nav-item mb-2">
                        <a href="/my-reservations" class="nav-link active text-danger fw-bold bg-light rounded"><i class="bi bi-journal-text"></i> Historial</a>
                    </li>
                </ul>
            </div>

            <main class="col-md-9 ms-sm-auto col-lg-9 px-md-4">
                <h2 class="mb-4"><i class="bi bi-journal-text text-danger"></i> Mis Reservas</h2>
                
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0 align-middle">
                                <thead class="bg-danger text-white">
                                    <tr>
                                        <th>Vehículo</th>
                                        <th>Fecha Inicio</th>
                                        <th>Fecha Fin</th>
                                        <th>Estado</th>
                                        <th>Kms</th>
                                        <th>Incidencias</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(reservas.length === 0) { %>
                                        <tr><td colspan="6" class="text-center py-4">No tienes reservas registradas.</td></tr>
                                    <% } else { %>
                                        <% reservas.forEach(r => { %>
                                        <tr>
                                            <td>
                                                <strong><%= r.vehiculo %></strong><br>
                                                <span class="badge bg-light text-dark border"><%= r.matricula %></span>
                                            </td>
                                            <td><%= new Date(r.fecha_inicio).toLocaleString() %></td>
                                            <td><%= new Date(r.fecha_fin).toLocaleString() %></td>
                                            <td>
                                                <% if(r.estado === 'activa') { %>
                                                    <span class="badge bg-success">Activa</span>
                                                <% } else if(r.estado === 'finalizada') { %>
                                                    <span class="badge bg-secondary">Finalizada</span>
                                                <% } else { %>
                                                    <span class="badge bg-danger"><%= r.estado %></span>
                                                <% } %>
                                            </td>
                                            <td><%= r.kilometros_recorridos ? r.kilometros_recorridos + ' km' : '-' %></td>
                                            <td>
                                                <% if(r.incidencias_reportadas) { %>
                                                    <i class="bi bi-exclamation-circle-fill text-warning" title="<%= r.incidencias_reportadas %>"></i> 
                                                    <small class="d-none d-md-inline"><%= r.incidencias_reportadas %></small>
                                                <% } else { %>
                                                    -
                                                <% } %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>