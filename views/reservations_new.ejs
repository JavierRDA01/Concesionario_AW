<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>Reservar Vehículo - WibbleUCM</title>
</head>
<body class="bg-light">
    <%- include('./barraNavegadora.ejs') %>

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-5">
                
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <h4 class="card-title mb-4 text-center">Reservar vehículo</h4>
                        
                        <% if (locals.success_msg) { %>
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <%= success_msg %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                        </div>
                        <% } %>

                        <% if(locals.errors && errors.length){ %>
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                <% errors.forEach(e => { %>
                                    <li><%= e.msg %></li>
                                <% }) %>
                            </ul>
                        </div>
                        <% } %>

                        <form action="/reservations/new" method="POST" class="row g-3" id="formReserva">

                            <div class="col-12">
                                <label for="vehiculo" class="form-label">Vehículo</label>
                                <select id="vehiculo" name="id_vehiculo" class="form-select" required>
                                    <option value="" disabled selected>Selecciona un vehículo</option>
                                    <% vehiculos.forEach(v => { %>
                                        <option value="<%= v.id_vehiculo %>"><%= v.marca %> <%= v.modelo %> - <%= v.matricula %></option>
                                    <% }) %>
                                </select>
                            </div>

                            <div class="col-12">
                                <label for="fecha_inicio" class="form-label">Fecha inicio</label>
                                <input 
                                    type="date" 
                                    id="fecha_inicio" 
                                    name="fecha_inicio" 
                                    class="form-control" 
                                    value="<%= oldInput ? oldInput.fecha_inicio : '' %>" 
                                    required
                                    onchange="document.getElementById('fecha_fin').min = this.value">
                            </div>
                            
                            <div class="col-12">
                                <label for="fecha_fin" class="form-label">Fecha fin</label>
                                <input type="date" id="fecha_fin" name="fecha_fin" class="form-control"  value="<%= oldInput ? oldInput.fecha_fin : '' %>" required>
                            </div>

                            <div class="col-12">
                                <label for="kilometros_recorridos" class="form-label">Kilómetros recorridos</label>
                                <input type="number" id="kilometros_recorridos" name="kilometros_recorridos" class="form-control" value="<%= oldInput ? oldInput.kilometros_recorridos : '' %>" min="0" step="1">
                            </div>
                            
                            <div class="col-12">
                                <label for="incidencias_reportadas" class="form-label">Incidencias reportadas</label>
                                <textarea id="incidencias_reportadas" name="incidencias_reportadas" rows="3" class="form-control"><%= oldInput ? oldInput.incidencias_reportadas : '' %></textarea>
                            </div>

                            <div class="col-12 text-center mt-4">
                                <button class="btn btn-danger w-100" type="button" onclick="abrirModalConfirmacion()">
                                    Revisar y Confirmar
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div> 
        </div>
    </div>

    <div class="modal fade" id="modalConfirmacion" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="modalLabel">Confirmar Reserva</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Por favor, revisa los datos de tu reserva antes de confirmar:</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Vehículo:</strong> <span id="modal_vehiculo"></span></li>
                        <li class="list-group-item"><strong>Desde:</strong> <span id="modal_inicio"></span></li>
                        <li class="list-group-item"><strong>Hasta:</strong> <span id="modal_fin"></span></li>
                    </ul>
                    <div class="alert alert-warning mt-3 mb-0 small">
                        <i class="bi bi-info-circle"></i> Al confirmar, el vehículo dejará de estar disponible para otros usuarios en estas fechas.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-success" onclick="enviarFormularioReal()">Confirmar Reserva</button>
                </div>
            </div>
        </div>
    </div>

   <script src="/js/bootstrap.bundle.min.js"></script>
<script>
    // Configurar fecha mínima
    const fechaInicioInput = document.getElementById('fecha_inicio');
    if(fechaInicioInput) {
        fechaInicioInput.min = new Date().toISOString().split('T')[0];
    }

    function abrirModalConfirmacion() {
        console.log("Forzando apertura del modal...");

        // 1. RECOLECTAR DATOS (Con protección por si están vacíos)
        const inicioVal = document.getElementById('fecha_inicio').value || "Sin fecha";
        const finVal = document.getElementById('fecha_fin').value || "Sin fecha";
        
        const vehiculoSelect = document.getElementById('vehiculo');
        let vehiculoTexto = "No seleccionado";
        if (vehiculoSelect.selectedIndex >= 0) {
            vehiculoTexto = vehiculoSelect.options[vehiculoSelect.selectedIndex].text;
        }

        // 2. PEGAR DATOS EN EL HTML DEL MODAL
        document.getElementById('modal_vehiculo').textContent = vehiculoTexto;
        document.getElementById('modal_inicio').textContent = inicioVal;
        document.getElementById('modal_fin').textContent = finVal;

        // 3. ABRIR MODAL DIRECTAMENTE (Sin checkValidity)
        try {
            const modalElement = document.getElementById('modalConfirmacion');
            const modal = new bootstrap.Modal(modalElement);
            modal.show();
        } catch (error) {
            alert("Error al abrir modal: " + error.message);
            console.error(error);
        }
    }

    function enviarFormularioReal() {
        const form = document.getElementById('formReserva');
        // Ahora sí validamos antes de enviar de verdad
        if (form.checkValidity()) {
            form.submit();
        } else {
            alert("Por favor, rellena todos los campos obligatorios antes de confirmar.");
            // Cerramos el modal manualmente si falla la validación final
            const modalElement = document.getElementById('modalConfirmacion');
            const modal = bootstrap.Modal.getInstance(modalElement); 
            modal.hide();
            form.reportValidity();
        }
    }
</script>
</body>
</html>