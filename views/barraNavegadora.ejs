<div class="modal fade" id="accessibilityModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Opciones de Accesibilidad</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <p class="text-muted">Personaliza tu experiencia:</p>
                <div class="d-grid gap-3">
                    <button class="btn btn-outline-dark d-flex justify-content-between align-items-center" id="btn-contrast">
                        <span><i class="bi bi-moon-stars-fill me-2"></i> Alto Contraste</span>
                        <span id="status-contrast" class="badge bg-secondary">OFF</span>
                    </button>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-outline-primary" id="btn-font-small">A-</button>
                        <button type="button" class="btn btn-outline-primary" id="btn-font-normal">A</button>
                        <button type="button" class="btn btn-outline-primary" id="btn-font-large">A+</button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<script>
    const userPrefsServer = <%- (typeof user !== 'undefined' && user && user.preferencias_accesibilidad) ? user.preferencias_accesibilidad : '{}' %>;
    let currentConfig = {
        highContrast: userPrefsServer.highContrast || false,
        fontSize: userPrefsServer.fontSize || 'normal'
    };

    function applyAccessibility() {
        const body = document.body;
        const statusBadge = document.getElementById('status-contrast');
        
        if (currentConfig.highContrast) {
            body.classList.add('high-contrast');
            if(statusBadge) { statusBadge.textContent = 'ON'; statusBadge.className = 'badge bg-success'; }
        } else {
            body.classList.remove('high-contrast');
            if(statusBadge) { statusBadge.textContent = 'OFF'; statusBadge.className = 'badge bg-secondary'; }
        }

        body.classList.remove('font-small', 'font-large');
        if (currentConfig.fontSize === 'small') body.classList.add('font-small');
        if (currentConfig.fontSize === 'large') body.classList.add('font-large');
    }

    function savePreferences() {
        <% if (typeof user !== 'undefined' && user) { %>
            fetch('/api/accessibility', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(currentConfig)
            }).catch(console.error);
        <% } %>
    }

    document.addEventListener('DOMContentLoaded', () => {
        applyAccessibility();
        const btnContrast = document.getElementById('btn-contrast');
        if(btnContrast) {
            btnContrast.addEventListener('click', () => {
                currentConfig.highContrast = !currentConfig.highContrast;
                applyAccessibility();
                savePreferences();
            });
        }
        ['small', 'normal', 'large'].forEach(size => {
            const btn = document.getElementById(`btn-font-${size}`);
            if(btn) {
                btn.addEventListener('click', () => {
                    currentConfig.fontSize = size;
                    applyAccessibility();
                    savePreferences();
                });
            }
        });
    });
</script>