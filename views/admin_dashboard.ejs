<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>Dashboard Admin - WibbleUCM</title>
    <!-- <style>
        .card-hover:hover { transform: translateY(-5px); transition: 0.3s; cursor: pointer; }
    </style> -->
</head>
<body class="bg-light">
    
    <%- include('./barraNavegadora.ejs') %>

    <div class="container-fluid my-4">
        <div class="row">
            <div class="col-md-2 d-none d-md-block bg-white sidebar p-3 shadow-sm rounded me-3">
                <h5 class="text-muted">Menú Admin</h5>
                <hr>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a href="#" class="nav-link active text-danger fw-bold">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/vehicles" class="nav-link text-dark">
                            <i class="bi bi-car-front"></i> Gestión de Flota
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="#" class="nav-link text-dark">
                            <i class="bi bi-people"></i> Usuarios y Empleados
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="#" class="nav-link text-dark">
                            <i class="bi bi-calendar-check"></i> Reservas
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/" class="nav-link text-dark">
                            <i class="bi bi-calendar-check"></i> Concesionarios
                        </a>
                    </li>
                    <li class="nav-item mt-4">
                        <a href="#" class="nav-link text-muted small">
                            <i class="bi bi-gear"></i> Configuración
                        </a>
                    </li>
                </ul>
            </div>

            <main class="col-md-9 ms-sm-auto col-lg-9 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Panel de Control</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
                            <i class="bi bi-calendar"></i> Esta semana
                        </button>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-start border-danger border-4 shadow-sm card-hover py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Reservas Activas</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800"><%= stats.reservasActivas %></div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="bi bi-calendar-check fs-2 text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-start border-success border-4 shadow-sm card-hover py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Vehículos Libres</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800"><%= stats.vehiculosLibres %></div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="bi bi-ev-front fs-2 text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-start border-warning border-4 shadow-sm card-hover py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Incidencias</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800"><%= stats.incidencias %></div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="bi bi-exclamation-triangle fs-2 text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-start border-info border-4 shadow-sm card-hover py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Usuarios Totales</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800"><%= stats.totalUsuarios %></div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="bi bi-people-fill fs-2 text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-8 mb-4">
                        <div class="card shadow-sm mb-4">
                            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-white">
                                <h6 class="m-0 fw-bold text-danger">Reservas por Concesionario</h6>
                            </div>
                            <div class="card-body">
                                <div class="text-center py-5 bg-light border rounded">
                                    <p class="text-muted mb-0">[ Espacio para Gráfico de Barras ]</p>
                                    <small>Estadística básica requerida en el PDF</small>
                                </div>
                                <div class="mt-4">
                                    <h6 class="small fw-bold">Vehículo más usado:</h6>
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar bg-danger" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">Tesla Model 3 (75 reserv.)</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 mb-4">
                        <div class="card shadow-sm mb-4">
                            <div class="card-header py-3 bg-white">
                                <h6 class="m-0 fw-bold text-dark">Últimas Reservas</h6>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0 align-middle">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Usuario</th>
                                                <th>Estado</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% ultimasReservas.forEach(reserva => { %>
                                            <tr>
                                                <td>
                                                    <span class="d-block fw-bold"><%= reserva.usuario %></span>
                                                    <small class="text-muted"><%= reserva.vehiculo %></small>
                                                </td>
                                                <td>
                                                    <% if(reserva.estado === 'activa') { %>
                                                        <span class="badge bg-success">Activa</span>
                                                    <% } else if (reserva.estado === 'pendiente') { %>
                                                        <span class="badge bg-warning text-dark">Pendiente</span>
                                                    <% } else { %>
                                                        <span class="badge bg-secondary"><%= reserva.estado %></span>
                                                    <% } %>
                                                </td>
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="card-footer bg-white text-center">
                                <a href="#" class="text-decoration-none text-danger small fw-bold">Ver todas las reservas</a>
                            </div>
                        </div>
                    </div>
                </div>

            </main>
        </div>
    </div>

    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>