<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <title>Dashboard Admin - WibbleUCM</title>
</head>
<body class="bg-light">
    
    <%- include('./barraNavegadora.ejs') %>

    <div class="container-fluid my-4">
        <div class="row">
            <div class="col-md-2 d-none d-md-block bg-white sidebar p-3 shadow-sm rounded me-3" style="min-height: 80vh;">
                <h5 class="text-muted">Menú Admin</h5>
                <hr>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a href="/admin/dashboard" class="nav-link active text-danger fw-bold bg-light rounded">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/vehicles" class="nav-link text-dark">
                            <i class="bi bi-car-front"></i> Gestión de Flota
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/dealerships" class="nav-link text-dark">
                            <i class="bi bi-building"></i> Concesionarios
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/users" class="nav-link text-dark">
                            <i class="bi bi-people"></i> Usuarios
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/reservations" class="nav-link text-dark">
                            <i class="bi bi-calendar-check"></i> Reservas
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/import" class="nav-link text-dark">
                            <i class="bi bi-cloud-upload"></i> Carga de Datos
                        </a>
                    </li>
                </ul>
            </div>

            <main class="col-md-9 ms-sm-auto col-lg-9 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2 text-dark">Panel de Control</h1>
                </div>

                <div class="row mb-4">
                    
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-start border-dark border-4 shadow-sm h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                            Reservas Activas
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-dark">
                                            <%= stats.reservasActivas %>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="bi bi-calendar-check fs-2 text-secondary"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-start border-dark border-4 shadow-sm h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                            Vehículos Libres
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-dark">
                                            <%= stats.vehiculosLibres %>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="bi bi-ev-front fs-2 text-secondary"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-start border-dark border-4 shadow-sm h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                            Kms Recorridos
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-dark">
                                            <%= stats.kilometrosTotales %> km
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="bi bi-speedometer fs-2 text-secondary"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-start border-dark border-4 shadow-sm h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                            Incidencias
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-dark">
                                            <%= stats.incidencias %>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="bi bi-exclamation-triangle fs-2 text-secondary"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    
                    <div class="col-lg-8">
                        
                        <div class="card shadow-sm mb-4">
                            <div class="card-header py-3 bg-white">
                                <h6 class="m-0 fw-bold text-dark">Reservas por Concesionario</h6>
                            </div>
                            <div class="card-body">
                                <canvas id="chartConcesionarios" height="100"></canvas>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="card shadow-sm h-100">
                                    <div class="card-header py-3 bg-white">
                                        <h6 class="m-0 fw-bold text-dark">Estado de la Flota</h6>
                                    </div>
                                    <div class="card-body">
                                        <div style="height: 200px; position: relative;">
                                            <canvas id="chartEstadoFlota"></canvas>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-4">
                                <div class="card shadow-sm h-100">
                                    <div class="card-header py-3 bg-white">
                                        <h6 class="m-0 fw-bold text-dark">Insights</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-4">
                                            <small class="text-muted text-uppercase fw-bold">Vehículo más popular</small>
                                            <% if(stats.vehiculoMasUsado) { %>
                                                <div class="d-flex align-items-center mt-2">
                                                    <div class="display-6 me-3"><i class="bi bi-trophy text-warning"></i></div>
                                                    <div>
                                                        <h6 class="mb-0 fw-bold"><%= stats.vehiculoMasUsado.marca %> <%= stats.vehiculoMasUsado.modelo %></h6>
                                                        <span class="text-muted small"><%= stats.vehiculoMasUsado.total %> reservas totales</span>
                                                    </div>
                                                </div>
                                            <% } else { %>
                                                <p class="mt-2 text-muted">Sin datos.</p>
                                            <% } %>
                                        </div>
                                        <hr>
                                        <div>
                                            <small class="text-muted text-uppercase fw-bold">Duración Media Reserva</small>
                                            <div class="d-flex align-items-center mt-2">
                                                <div class="display-6 me-3"><i class="bi bi-hourglass-split text-info"></i></div>
                                                <div>
                                                    <h6 class="mb-0 fw-bold"><%= stats.duracionPromedio %> días</h6>
                                                    <span class="text-muted small">Promedio de uso por alquiler</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        
                        <div class="card shadow-sm mb-4">
                            <div class="card-header py-3 bg-white">
                                <h6 class="m-0 fw-bold text-dark">Últimas Reservas</h6>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0 align-middle text-small">
                                        <thead class="table-light">
                                            <tr><th>Usuario</th><th class="text-end">Estado</th></tr>
                                        </thead>
                                        <tbody>
                                            <% if(stats.ultimasReservas.length > 0) { %>
                                                <% stats.ultimasReservas.forEach(reserva => { %>
                                                <tr>
                                                    <td>
                                                        <span class="d-block fw-bold"><%= reserva.usuario %></span>
                                                        <small class="text-muted"><%= reserva.vehiculo %></small>
                                                    </td>
                                                    <td class="text-end">
                                                        <% if(reserva.estado === 'activa') { %>
                                                            <span class="badge bg-success">Activa</span>
                                                        <% } else if (reserva.estado === 'cancelada') { %>
                                                            <span class="badge bg-danger">Cancelada</span>
                                                        <% } else { %>
                                                            <span class="badge bg-secondary"><%= reserva.estado %></span>
                                                        <% } %>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                            <% } else { %>
                                                <tr><td colspan="2" class="text-center p-3">Sin actividad reciente</td></tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="card-footer bg-white text-center">
                                <a href="/admin/reservations" class="text-decoration-none text-danger small fw-bold">Ver todas las reservas</a>
                            </div>
                        </div>

                        <div class="card shadow-sm mb-4">
                            <div class="card-header py-3 bg-white">
                                <h6 class="m-0 fw-bold text-dark">Usuarios Top</h6>
                            </div>
                            <div class="card-body p-0">
                                <ul class="list-group list-group-flush">
                                    <% if(stats.topUsuarios.length > 0) { %>
                                        <% stats.topUsuarios.forEach((u, index) => { %>
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <div>
                                                    <span class="badge bg-light text-dark border me-2">#<%= index + 1 %></span>
                                                    <%= u.nombre %>
                                                </div>
                                                <span class="badge bg-danger rounded-pill"><%= u.total %></span>
                                            </li>
                                        <% }) %>
                                    <% } else { %>
                                        <li class="list-group-item text-center text-muted">Sin datos</li>
                                    <% } %>
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="/js/bootstrap.bundle.min.js"></script>

    <script>
        // Recibimos los datos del servidor EJS y los convertimos a JSON para usarlos en JS cliente
        const dataConcesionarios = <%- JSON.stringify(stats.reservasPorConcesionario) %>;
        const dataFlota = <%- JSON.stringify(stats.estadoFlota) %>;

        // 1. Gráfico de Barras: Reservas por Concesionario
        const ctxConc = document.getElementById('chartConcesionarios').getContext('2d');
        new Chart(ctxConc, {
            type: 'bar',
            data: {
                labels: dataConcesionarios.map(d => d.nombre), // Eje X: Nombres de concesionarios
                datasets: [{
                    label: 'Reservas',
                    data: dataConcesionarios.map(d => d.total), // Eje Y: Cantidad de reservas
                    backgroundColor: 'rgba(220, 53, 69, 0.7)', // Color rojo Wibble
                    borderRadius: 4
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: false } }, // Ocultamos la leyenda porque solo hay un dato
                scales: { y: { beginAtZero: true, ticks: { stepSize: 1 } } } // Eje Y empieza en 0 y cuenta de 1 en 1
            }
        });

        // 2. Gráfico Circular: Estado de la Flota
        const estadosPosibles = ['disponible', 'reservado', 'mantenimiento'];
        // Mapeamos los datos recibidos para asegurarnos de que el orden coincide con los colores
        const valoresFlota = estadosPosibles.map(estado => {
            const found = dataFlota.find(d => d.estado === estado);
            return found ? found.total : 0;
        });

        const ctxFlota = document.getElementById('chartEstadoFlota').getContext('2d');
        new Chart(ctxFlota, {
            type: 'doughnut',
            data: {
                labels: ['Disponible', 'Reservado', 'Mantenimiento'],
                datasets: [{
                    data: valoresFlota,
                    backgroundColor: ['#198754', '#dc3545', '#ffc107'], // Verde, Rojo, Amarillo
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false, // Para que se ajuste al contenedor
                plugins: { legend: { position: 'bottom' } } // Leyenda abajo
            }
        });
    </script>
</body>
</html>