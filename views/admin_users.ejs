<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>Gestión de Usuarios - Admin</title>
</head>
<body class="bg-light">
    
    <%- include('./barraNavegadora.ejs') %>

    <div class="container-fluid my-4">
        <div class="row">
            <div class="col-md-2 d-none d-md-block bg-white sidebar p-3 shadow-sm rounded me-3" style="min-height: 80vh;">
                <h5 class="text-muted">Menú Admin</h5>
                <hr>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2"><a href="/admin/dashboard" class="nav-link text-dark"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                    <li class="nav-item mb-2"><a href="/admin/vehicles" class="nav-link text-dark"><i class="bi bi-car-front"></i> Gestión de Flota</a></li>
                    <li class="nav-item mb-2"><a href="/admin/dealerships" class="nav-link text-dark"><i class="bi bi-building"></i> Concesionarios</a></li>
                    <li class="nav-item mb-2"><a href="/admin/users" class="nav-link active text-danger fw-bold bg-light rounded"><i class="bi bi-people"></i> Usuarios</a></li>
                    <li class="nav-item mb-2"><a href="/admin/reservations" class="nav-link text-dark"><i class="bi bi-calendar-check"></i> Reservas</a></li>
                    <li class="nav-item mb-2"><a href="/admin/import" class="nav-link text-dark"><i class="bi bi-cloud-upload"></i> Carga de Datos</a></li>
                </ul>
            </div>

            <main class="col-md-9 ms-sm-auto col-lg-9 px-md-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="text-dark">Gestión de Usuarios</h2>
                </div>
                
                <div class="card shadow-sm border-top">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0 align-middle">
                               <thead class="bg-dark text-white">
                                    <tr>
                                        <th>ID</th>
                                        <th>Nombre / Correo</th>
                                        <th>Rol</th>
                                        <th>Concesionario Asignado</th>
                                        <th>Teléfono</th>
                                        <th>Acciones</th> 
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(users.length === 0) { %>
                                        <tr><td colspan="6" class="text-center py-3">No hay usuarios registrados.</td></tr>
                                    <% } else { %>
                                        <% users.forEach(u => { %>
                                            <tr>
                                                <td>#<%= u.id_usuario %></td>
                                                
                                                <td>
                                                    <strong><%= u.nombre %></strong><br>
                                                    <small class="text-muted"><%= u.correo %></small>
                                                </td>

                                                <td id="rol-badge-<%= u.id_usuario %>">
                                                    <% if(u.rol === 'admin') { %>
                                                        <span class="badge bg-danger">Administrador</span>
                                                    <% } else { %>
                                                        <span class="badge bg-primary">Empleado</span>
                                                    <% } %>
                                                </td>

                                                <td>
                                                    <% if(u.nombre_concesionario) { %>
                                                        <div class="d-flex align-items-center">
                                                            <i class="bi bi-geo-alt-fill text-danger me-2"></i> 
                                                            <span><%= u.nombre_concesionario %></span>
                                                        </div>
                                                    <% } else { %>
                                                        <span class="text-muted text-opacity-50 small font-italic">No asignado</span>
                                                    <% } %>
                                                </td>

                                                <td><%= u.telefono || '-' %></td>

                                                <td id="accion-btn-<%= u.id_usuario %>">
                                                    <% if (u.id_usuario !== user.id_usuario) { %> 
                                                        
                                                        <button class="btn btn-sm <%= u.rol === 'empleado' ? 'btn-outline-danger' : 'btn-outline-secondary' %>"
                                                                onclick="cambiarRolAjax('<%= u.id_usuario %>', '<%= u.rol === 'empleado' ? 'admin' : 'empleado' %>')">
                                                            
                                                            <% if(u.rol === 'empleado') { %>
                                                                <i class="bi bi-shield-lock-fill"></i> Ascender
                                                            <% } else { %>
                                                                <i class="bi bi-person-badge"></i> Degradar
                                                            <% } %>
                                                        </button>

                                                    <% } else { %>
                                                        <span class="text-muted small">Tú</span>
                                                    <% } %>
                                                </td>

                                            </tr>
                                        <% }) %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>

    <script>
        function cambiarRolAjax(idUsuario, nuevoRol) {
            
            // Construimos el objeto JSON
            const datos = { 
                id_usuario: idUsuario, 
                nuevo_rol: nuevoRol 
            };

            // Llamada AJAX al estilo de la presentación
            $.ajax({
                type: "POST",
                url: "/admin/users/role",
                contentType: "application/json",
                data: JSON.stringify(datos),
                
                success: function(data) {
                    if (data.success) {
                        // 1. Actualizar visualmente el Badge de Rol
                        const $celdaBadge = $("#rol-badge-" + idUsuario);
                        
                        if (nuevoRol === 'admin') {
                            $celdaBadge.html('<span class="badge bg-danger">Administrador</span>');
                        } else {
                            $celdaBadge.html('<span class="badge bg-primary">Empleado</span>');
                        }

                        // 2. Actualizar visualmente el Botón de Acción
                        const $celdaBtn = $("#accion-btn-" + idUsuario);
                        
                        if (nuevoRol === 'admin') {
                            // Si ahora es admin, el botón debe ser para "Degradar" a empleado
                            $celdaBtn.html(`
                                <button class="btn btn-sm btn-outline-secondary" 
                                        onclick="cambiarRolAjax('${idUsuario}', 'empleado')">
                                    <i class="bi bi-person-badge"></i> Degradar
                                </button>
                            `);
                        } else {
                            // Si ahora es empleado, el botón debe ser para "Ascender" a admin
                            $celdaBtn.html(`
                                <button class="btn btn-sm btn-outline-danger" 
                                        onclick="cambiarRolAjax('${idUsuario}', 'admin')">
                                    <i class="bi bi-shield-lock-fill"></i> Ascender
                                </button>
                            `);
                        }

                    } else {
                        alert('Error: ' + data.message);
                    }
                },
                
                error: function(jqXHR, textStatus, errorThrown) {
                    console.error("Error:", errorThrown);
                    alert("Hubo un error de conexión con el servidor.");
                }
            });
        }
    </script>
</body>
</html>