<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>Gestión de Reservas - Admin</title>
</head>
<body class="bg-light">
    
    <%- include('./barraNavegadora.ejs') %>

    <div class="container-fluid my-4">
        <div class="row">
            <div class="col-md-2 d-none d-md-block bg-white sidebar p-3 shadow-sm rounded me-3" style="min-height: 80vh;">
                <h5 class="text-muted">Menú Admin</h5>
                <hr>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a href="/admin/dashboard" class="nav-link text-dark">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/vehicles" class="nav-link text-dark">
                            <i class="bi bi-car-front"></i> Gestión de Flota
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/users" class="nav-link text-dark">
                            <i class="bi bi-people"></i> Usuarios
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/reservations" class="nav-link active text-danger fw-bold bg-light rounded">
                            <i class="bi bi-calendar-check"></i> Reservas
                        </a>
                    </li>
                </ul>
            </div>

            <main class="col-md-9 ms-sm-auto col-lg-9 px-md-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="text-dark">Listado de Reservas</h2>
                </div>
                
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0 align-middle">
                                <thead class="bg-dark text-white">
                                    <tr>
                                        <th>ID</th>
                                        <th>Usuario</th>
                                        <th>Vehículo</th>
                                        <th>Fechas</th>
                                        <th>Estado</th>
                                        <th style="width: 30%;">Incidencias</th> </tr>
                                </thead>
                                <tbody>
                                    <% if(reservas.length === 0) { %>
                                        <tr><td colspan="6" class="text-center py-3">No hay reservas registradas.</td></tr>
                                    <% } else { %>
                                        <% reservas.forEach(r => { %>
                                        <tr>
                                            <td><strong>#<%= r.id_reserva %></strong></td>
                                            <td><%= r.nombre_usuario %></td>
                                            <td><%= r.vehiculo %></td>
                                            <td>
                                                <div class="d-flex flex-column small">
                                                    <span><strong>Inicio:</strong> <%= new Date(r.fecha_inicio).toLocaleDateString() %></span>
                                                    <span><strong>Fin:</strong> <%= new Date(r.fecha_fin).toLocaleDateString() %></span>
                                                </div>
                                            </td>
                                            <td>
                                                <% if(r.estado === 'activa') { %>
                                                    <span class="badge bg-success">Activa</span>
                                                <% } else if(r.estado === 'finalizada') { %>
                                                    <span class="badge bg-secondary">Finalizada</span>
                                                <% } else { %>
                                                    <span class="badge bg-danger"><%= r.estado %></span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if(r.incidencias_reportadas && r.incidencias_reportadas.trim() !== '') { %>
                                                    <div class="alert alert-warning p-2 mb-0 small d-flex align-items-start">
                                                        <i class="bi bi-exclamation-triangle-fill me-2 mt-1"></i>
                                                        <span><%= r.incidencias_reportadas %></span>
                                                    </div>
                                                <% } else { %>
                                                    <span class="text-muted small font-italic">Sin incidencias</span>
                                                <% } %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>