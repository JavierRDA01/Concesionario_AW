<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>Gestión de Reservas - Admin</title>
</head>
<body class="bg-light">
    
    <%- include('./barraNavegadora.ejs') %>

    <div class="container-fluid my-4">
        <div class="row">
            <div class="col-md-2 d-none d-md-block bg-white sidebar p-3 shadow-sm rounded me-3" style="min-height: 80vh;">
                <h5 class="text-muted">Menú Admin</h5>
                <hr>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a href="/admin/dashboard" class="nav-link text-dark">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/vehicles" class="nav-link text-dark">
                            <i class="bi bi-car-front"></i> Gestión de Flota
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/dealerships" class="nav-link text-dark">
                            <i class="bi bi-building"></i> Concesionarios
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/users" class="nav-link text-dark">
                            <i class="bi bi-people"></i> Usuarios
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/reservations" class="nav-link active text-danger fw-bold bg-light rounded">
                            <i class="bi bi-calendar-check"></i> Reservas
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/import" class="nav-link text-dark">
                            <i class="bi bi-cloud-upload"></i> Carga de Datos
                        </a>
                    </li>
                </ul>
            </div>

            <main class="col-md-9 ms-sm-auto col-lg-9 px-md-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="text-dark">Listado de Reservas</h2>
                </div>
                
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0 align-middle" style="table-layout: fixed; min-width: 1100px;">
                                <thead class="bg-dark text-white">
                                    <tr>
                                        <th style="width: 5%;">ID</th>
                                        <th style="width: 12%;">Usuario</th> <th style="width: 18%;">Vehículo</th> <th style="width: 20%;">Fechas</th>
                                        <th style="width: 10%;">Estado</th>
                                        <th style="width: 25%;">Incidencias</th> <th style="width: 10%;">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(reservas.length === 0) { %>
                                        <tr><td colspan="7" class="text-center py-3">No hay reservas registradas.</td></tr>
                                    <% } else { %>
                                        <% reservas.forEach(r => { %>
                                        <tr>
                                            <td class="fw-bold">#<%= r.id_reserva %></td>
                                            
                                            <td class="text-truncate" title="<%= r.nombre_usuario %>">
                                                <%= r.nombre_usuario %>
                                            </td>
                                            
                                            <td class="text-truncate" title="<%= r.vehiculo %>">
                                                <small class="text-muted"><%= r.vehiculo %></small>
                                            </td>
                                            
                                            <td>
                                                <div class="d-flex flex-column small">
                                                    <span class="text-nowrap"><i class="bi bi-calendar-check me-1"></i><%= new Date(r.fecha_inicio).toLocaleDateString() %></span>
                                                    <span class="text-nowrap"><i class="bi bi-arrow-right-short me-1"></i><%= new Date(r.fecha_fin).toLocaleDateString() %></span>
                                                </div>
                                            </td>
                                            
                                            <td>
                                                <% if(r.estado === 'activa') { %>
                                                    <span class="badge bg-success">Activa</span>
                                                <% } else if(r.estado === 'finalizada') { %>
                                                    <span class="badge bg-secondary">Finalizada</span>
                                                <% } else { %>
                                                    <span class="badge bg-danger">Cancelada</span>
                                                <% } %>
                                            </td>
                                            
                                            <td class="text-wrap">
                                                <% if(r.incidencias_reportadas && r.incidencias_reportadas.trim() !== '') { %>
                                                    <div class="alert alert-warning p-2 mb-0 small lh-sm">
                                                        <i class="bi bi-exclamation-triangle-fill me-1"></i>
                                                        <%= r.incidencias_reportadas %>
                                                    </div>
                                                <% } else { %>
                                                    <span class="text-muted small opacity-50">-</span>
                                                <% } %>
                                            </td>
                                            
                                            <td>
                                                <% if(r.estado === 'activa') { %>
                                                    <form action="/admin/reservations/cancel" method="POST" onsubmit="return confirm('¿Seguro que quieres cancelar esta reserva?');">
                                                        <input type="hidden" name="id_reserva" value="<%= r.id_reserva %>">
                                                        <button type="submit" class="btn btn-sm btn-outline-danger w-100" title="Cancelar Reserva">
                                                            <i class="bi bi-x-circle"></i> Cancelar
                                                        </button>
                                                    </form>
                                                <% } %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>