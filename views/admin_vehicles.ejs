<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>Gesti칩n de Flota - Admin</title>
</head>
<body class="bg-light">
    
    <%- include('./barraNavegadora.ejs') %>

    <div class="container-fluid my-4">
        <div class="row">
            <div class="col-md-2 d-none d-md-block bg-white sidebar p-3 shadow-sm rounded me-3" style="min-height: 80vh;">
                <h5 class="text-muted">Men칰 Admin</h5>
                <hr>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a href="/admin/dashboard" class="nav-link text-dark">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/vehicles" class="nav-link active text-danger fw-bold bg-light rounded">
                            <i class="bi bi-car-front"></i> Gesti칩n de Flota
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/dealerships" class="nav-link text-dark">
                            <i class="bi bi-building"></i> Concesionarios
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/users" class="nav-link text-dark">
                            <i class="bi bi-people"></i> Usuarios
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/reservations" class="nav-link text-dark">
                            <i class="bi bi-calendar-check"></i> Reservas
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/import" class="nav-link text-dark">
                            <i class="bi bi-cloud-upload"></i> Carga de Datos
                        </a>
                    </li>
                </ul>
            </div>

            <main class="col-md-9 ms-sm-auto col-lg-9 px-md-4">
                
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="text-dark">Gesti칩n de Flota</h2>
                    <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modalNuevoVehiculo">
                        <i class="bi bi-plus-circle"></i> A침adir Veh칤culo
                    </button>
                </div>

                <% if (typeof error_msg !== 'undefined' && error_msg) { %> 
                    <div class="alert alert-warning alert-dismissible fade show border-start border-warning border-4 shadow-sm" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-exclamation-triangle-fill fs-4 me-3 text-warning"></i>
                            <div><strong>Atenci칩n:</strong> <%= error_msg %></div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <% if (typeof success_msg !== 'undefined' && success_msg) { %> 
                    <div class="alert alert-success alert-dismissible fade show border-start border-success border-4 shadow-sm" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-check-circle-fill fs-4 me-3 text-success"></i>
                            <div><%= success_msg %></div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <div class="card shadow-sm border-top">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0 align-middle">
                                <thead class="bg-dark text-white">
                                    <tr>
                                        <th>Imagen</th>
                                        <th>Marca / Modelo</th>
                                        <th>Matr칤cula</th>
                                        <th>Concesionario</th>
                                        <th>Estado</th>
                                        <th class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(vehiculos.length === 0) { %>
                                        <tr><td colspan="6" class="text-center py-3">No hay veh칤culos registrados.</td></tr>
                                    <% } else { %>
                                        <% vehiculos.forEach(v => { %>
                                        <tr>
                                            <td>
                                                <% if(v.imagen && v.imagen !== 'default_car.jpg') { %>
                                                    <img src="/img/<%= v.imagen %>" 
                                                        alt="Foto" 
                                                        class="rounded border" 
                                                        style="width: 50px; height: 35px; object-fit: cover;">
                                                <% } else { %>
                                                    <div class="bg-white border rounded d-flex align-items-center justify-content-center text-secondary" style="width: 50px; height: 35px;">
                                                        <i class="bi bi-car-front-fill"></i>
                                                    </div>
                                                <% } %>
                                            </td>
                                            <td>
                                                <strong><%= v.marca %></strong> <%= v.modelo %>
                                                <br><small class="text-muted">A침o: <%= v.a침o_matriculacion %></small>
                                            </td>
                                            <td><span class="badge bg-light text-dark border"><%= v.matricula %></span></td>
                                            <td><%= v.nombre_concesionario %></td>
                                            <td>
                                                <% if(v.estado === 'disponible') { %>
                                                    <span class="badge bg-success">Disponible</span>
                                                <% } else if(v.estado === 'mantenimiento') { %>
                                                    <span class="badge bg-warning text-dark">Mantenimiento</span>
                                                <% } else { %>
                                                    <span class="badge bg-danger">Reservado</span>
                                                <% } %>
                                            </td>
                                            <td class="text-end">
                                                <button class="btn btn-sm btn-outline-dark me-1" 
                                                        onclick="abrirModalEstado('<%= v.id_vehiculo %>', '<%= v.estado %>', '<%= v.matricula %>')"
                                                        title="Cambiar Estado">
                                                    <i class="bi bi-gear-fill"></i>
                                                </button>

                                                <button class="btn btn-sm btn-outline-primary me-1" 
                                                        onclick="abrirModalEditar(<%= JSON.stringify(v) %>)"
                                                        title="Editar Detalles">
                                                    <i class="bi bi-pencil"></i>
                                                </button>

                                                <button class="btn btn-sm btn-outline-danger" 
                                                        onclick="abrirModalBorrar('<%= v.id_vehiculo %>', '<%= v.matricula %>')"
                                                        title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                        <% }) %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <div class="modal fade" id="modalNuevoVehiculo" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="bi bi-car-front-fill"></i> Alta de Veh칤culo</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/admin/vehicles/new" method="POST" enctype="multipart/form-data">
                    <div class="modal-body">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Matr칤cula <span class="text-danger">*</span></label>
                                <input type="text" name="matricula" class="form-control" placeholder="9900-NOP" pattern="[0-9]{4}-[A-Z]{3}" oninput="this.value = this.value.toUpperCase()" maxlength="8" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Marca <span class="text-danger">*</span></label>
                                <input type="text" name="marca" class="form-control" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Modelo <span class="text-danger">*</span></label>
                                <input type="text" name="modelo" class="form-control" required>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold">A침o</label>
                                <input type="number" name="anio" class="form-control" value="2023" min="2000" max="2030" required>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold">Plazas</label>
                                <input type="number" name="plazas" class="form-control" value="5" min="2" max="9" required>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold">Autonom칤a (km)</label>
                                <input type="number" name="autonomia" class="form-control" placeholder="400" required>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold">Color</label>
                                <input type="text" name="color" class="form-control" placeholder="Blanco">
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-bold">Concesionario Asignado <span class="text-danger">*</span></label>
                                <select name="id_concesionario" class="form-select" required>
                                    <option value="" selected disabled>Selecciona una ubicaci칩n...</option>
                                    <% if (concesionarios && concesionarios.length > 0) { %>
                                        <% concesionarios.forEach(c => { %>
                                            <option value="<%= c.id_concesionario %>"><%= c.nombre %> (<%= c.ciudad %>)</option>
                                        <% }) %>
                                    <% } else { %>
                                        <option value="" disabled>No hay concesionarios</option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-bold">Imagen del veh칤culo</label>
                                <input type="file" name="imagen" class="form-control" accept="image/*">
                                <div class="form-text">Formatos: JPG, PNG, WEBP. M치x 2MB.</div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-danger">Guardar Veh칤culo</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalEditarVehiculo" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title"><i class="bi bi-pencil-square"></i> Editar Veh칤culo</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/admin/vehicles/edit" method="POST" enctype="multipart/form-data">
                    <input type="hidden" name="id_vehiculo" id="edit_id">
                    <input type="hidden" name="current_imagen" id="edit_current_imagen">

                    <div class="modal-body">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Matr칤cula</label>
                                <input type="text" name="matricula" id="edit_matricula" class="form-control" pattern="[0-9]{4}-[A-Z]{3}" oninput="this.value = this.value.toUpperCase()" maxlength="8" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Marca</label>
                                <input type="text" name="marca" id="edit_marca" class="form-control" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Modelo</label>
                                <input type="text" name="modelo" id="edit_modelo" class="form-control" required>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold">A침o</label>
                                <input type="number" name="anio" id="edit_anio" class="form-control" required>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold">Plazas</label>
                                <input type="number" name="plazas" id="edit_plazas" class="form-control" required>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold">Autonom칤a</label>
                                <input type="number" name="autonomia" id="edit_autonomia" class="form-control" required>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold">Color</label>
                                <input type="text" name="color" id="edit_color" class="form-control">
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-bold">Concesionario</label>
                                <select name="id_concesionario" id="edit_concesionario" class="form-select" required>
                                    <% if (concesionarios && concesionarios.length > 0) { %>
                                        <% concesionarios.forEach(c => { %>
                                            <option value="<%= c.id_concesionario %>"><%= c.nombre %> (<%= c.ciudad %>)</option>
                                        <% }) %>
                                    <% } %>
                                </select>
                            </div>
                            
                            <div class="col-12">
                                <label class="form-label fw-bold">Imagen</label>
                                <div class="d-flex align-items-center mb-2 p-2 border rounded bg-light">
                                    <img id="edit_preview" src="" alt="Vista previa" class="me-3 rounded" style="width: 80px; height: 60px; object-fit: cover;">
                                    <div class="small text-muted" id="edit_filename_text">Ninguna imagen seleccionada</div>
                                </div>
                                <input type="file" name="imagen" id="edit_imagen_input" class="form-control" accept="image/*">
                                <div class="form-text">Sube un archivo para cambiar la foto actual.</div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalEstadoVehiculo" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title"><i class="bi bi-gear-fill"></i> Gestionar Estado</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/admin/vehicles/status" method="POST">
                    <div class="modal-body">
                        <p>Est치s cambiando el estado del veh칤culo con matr칤cula: <strong id="spanMatricula"></strong></p>
                        <input type="hidden" name="id_vehiculo" id="inputEstadoId">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Selecciona el nuevo estado:</label>
                            <select name="nuevo_estado" id="selectEstado" class="form-select">
                                <option value="disponible">游릭 Disponible</option>
                                <option value="mantenimiento">游 Mantenimiento (Taller)</option>
                                <option value="reservado">游댮 Reservado (Manual)</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-dark">Actualizar Estado</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalBorrarVehiculo" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="bi bi-exclamation-triangle-fill"></i> Eliminar Veh칤culo</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/admin/vehicles/delete" method="POST">
                    <div class="modal-body">
                        <p class="text-center">쮼st치s seguro de que quieres eliminar el veh칤culo con matr칤cula <strong id="delete_matricula"></strong>?</p>
                        <p class="text-center text-danger small">Esta acci칩n no se puede deshacer.</p>
                        <input type="hidden" name="id_vehiculo" id="delete_id">
                    </div>
                    <div class="modal-footer bg-light justify-content-center">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-danger">S칤, Eliminar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="/js/bootstrap.bundle.min.js"></script>
    
    <script>
        function abrirModalEstado(id, estadoActual, matricula) {
            document.getElementById('inputEstadoId').value = id;
            document.getElementById('selectEstado').value = estadoActual;
            document.getElementById('spanMatricula').textContent = matricula;
            const modal = new bootstrap.Modal(document.getElementById('modalEstadoVehiculo'));
            modal.show();
        }

        function abrirModalEditar(vehiculo) {
            // Rellenamos los campos del formulario
            document.getElementById('edit_id').value = vehiculo.id_vehiculo;
            document.getElementById('edit_matricula').value = vehiculo.matricula;
            document.getElementById('edit_marca').value = vehiculo.marca;
            document.getElementById('edit_modelo').value = vehiculo.modelo;
            document.getElementById('edit_anio').value = vehiculo.a침o_matriculacion;
            document.getElementById('edit_plazas').value = vehiculo.numero_plazas;
            document.getElementById('edit_autonomia').value = vehiculo.autonomia_km;
            document.getElementById('edit_color').value = vehiculo.color;
            document.getElementById('edit_concesionario').value = vehiculo.id_concesionario;
            
            // Imagen: guardamos el nombre actual en un input hidden
            document.getElementById('edit_current_imagen').value = vehiculo.imagen;
            
            // L칩gica de previsualizaci칩n
            const previewImg = document.getElementById('edit_preview');
            const filenameText = document.getElementById('edit_filename_text');
            
            if(vehiculo.imagen && vehiculo.imagen !== 'default_car.jpg') {
                previewImg.src = '/images/' + vehiculo.imagen;
                filenameText.textContent = 'Imagen actual: ' + vehiculo.imagen;
            } else {
                previewImg.src = 'https://placehold.co/600x400?text=Sin+Imagen';
                filenameText.textContent = 'Usando imagen por defecto';
            }

            const modal = new bootstrap.Modal(document.getElementById('modalEditarVehiculo'));
            modal.show();
        }

        function abrirModalBorrar(id, matricula) {
            document.getElementById('delete_id').value = id;
            document.getElementById('delete_matricula').textContent = matricula;
            const modal = new bootstrap.Modal(document.getElementById('modalBorrarVehiculo'));
            modal.show();
        }
    </script>
</body>
</html>