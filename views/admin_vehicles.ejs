<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>Gestión de Flota - Admin</title>
</head>
<body class="bg-light">
    
    <%- include('./barraNavegadora.ejs') %>

    <div class="container-fluid my-4">
        <div class="row">
            <div class="col-md-2 d-none d-md-block bg-white sidebar p-3 shadow-sm rounded me-3" style="min-height: 80vh;">
                <h5 class="text-muted">Menú Admin</h5>
                <hr>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a href="/admin/dashboard" class="nav-link text-dark">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/vehicles" class="nav-link active text-danger fw-bold bg-light rounded">
                            <i class="bi bi-car-front"></i> Gestión de Flota
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/users" class="nav-link text-dark">
                            <i class="bi bi-people"></i> Usuarios
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/reservations" class="nav-link text-dark">
                            <i class="bi bi-calendar-check"></i> Reservas
                        </a>
                    </li>
                </ul>
            </div>

            <main class="col-md-9 ms-sm-auto col-lg-9 px-md-4">
                
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="text-dark">Gestión de Flota</h2>
                    <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modalNuevoVehiculo">
                        <i class="bi bi-plus-circle"></i> Añadir Vehículo
                    </button>
                </div>

                <% if (typeof error_msg !== 'undefined' && error_msg) { %> 
                    <div class="alert alert-danger"><%= error_msg %></div>
                <% } %>

                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0 align-middle">
                                <thead class="bg-dark text-white">
                                    <tr>
                                        <th>Imagen</th>
                                        <th>Marca / Modelo</th>
                                        <th>Matrícula</th>
                                        <th>Concesionario</th>
                                        <th>Estado</th>
                                        <th class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% vehiculos.forEach(v => { %>
                                    <tr>
                                        <td>
                                            <div class="bg-secondary rounded d-flex align-items-center justify-content-center text-white" style="width: 50px; height: 35px;">
                                                <i class="bi bi-car-front-fill"></i>
                                            </div>
                                        </td>
                                        <td>
                                            <strong><%= v.marca %></strong> <%= v.modelo %>
                                            <br><small class="text-muted"><%= v.año_matriculacion %></small>
                                        </td>
                                        <td><span class="badge bg-light text-dark border"><%= v.matricula %></span></td>
                                        <td><%= v.nombre_concesionario %></td>
                                        <td>
                                            <% if(v.estado === 'disponible') { %>
                                                <span class="badge bg-success">Disponible</span>
                                            <% } else if(v.estado === 'mantenimiento') { %>
                                                <span class="badge bg-warning text-dark">Mantenimiento</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary"><%= v.estado %></span>
                                            <% } %>
                                        </td>
                                        <td class="text-end">
                                            <button class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i></button>
                                            <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>