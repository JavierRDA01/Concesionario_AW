<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>Gestión de Flota - Admin</title>
</head>
<body class="bg-light">
    
    <%- include('./barraNavegadora.ejs') %>

    <div class="container-fluid my-4">
        <div class="row">
            <div class="col-12 px-md-4">
                
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="text-dark">Gestión de Flota</h2>
                    <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modalNuevoVehiculo">
                        <i class="bi bi-plus-circle"></i> Añadir Vehículo
                    </button>
                </div>

                <% if (typeof error_msg !== 'undefined' && error_msg) { %> <% } %>

                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0 align-middle">
                                <thead class="bg-dark text-white">
                                    <tr>
                                        <th>Imagen</th>
                                        <th>Marca / Modelo</th>
                                        <th>Matrícula</th>
                                        <th>Concesionario</th>
                                        <th>Estado</th>
                                        <th class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% vehiculos.forEach(v => { %>
                                    <tr>
                                        <td>
                                            <div class="bg-secondary rounded d-flex align-items-center justify-content-center text-white" style="width: 50px; height: 35px;">
                                                <i class="bi bi-car-front-fill"></i>
                                            </div>
                                        </td>
                                        <td>
                                            <strong><%= v.marca %></strong> <%= v.modelo %>
                                            <br><small class="text-muted"><%= v.año_matriculacion %></small>
                                        </td>
                                        <td><span class="badge bg-light text-dark border"><%= v.matricula %></span></td>
                                        <td><%= v.nombre_concesionario %></td>
                                        <td>
                                            <% if(v.estado === 'disponible') { %>
                                                <span class="badge bg-success">Disponible</span>
                                            <% } else if(v.estado === 'mantenimiento') { %>
                                                <span class="badge bg-warning text-dark">Mantenimiento</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary"><%= v.estado %></span>
                                            <% } %>
                                        </td>
                                        <td class="text-end">
                                            <button class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i></button>
                                            <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="modal fade" id="modalNuevoVehiculo" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Dar de Alta Nuevo Vehículo</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/admin/vehicles/new" method="POST">
                    <div class="modal-body">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label">Matrícula</label>
                                <input type="text" name="matricula" class="form-control" required placeholder="1234-ABC">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Marca</label>
                                <input type="text" name="marca" class="form-control" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Modelo</label>
                                <input type="text" name="modelo" class="form-control" required>
                            </div>

                            <div class="col-md-3">
                                <label class="form-label">Año</label>
                                <input type="number" name="anio" class="form-control" required min="2000" max="2026">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Plazas</label>
                                <input type="number" name="plazas" class="form-control" required min="2" max="9">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Autonomía (km)</label>
                                <input type="number" name="autonomia" class="form-control" required>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Color</label>
                                <input type="text" name="color" class="form-control">
                            </div>

                            <div class="col-md-12">
                                <label class="form-label">Concesionario Asignado</label>
                                <select name="id_concesionario" class="form-select" required>
                                    <option value="" selected disabled>Selecciona una ubicación...</option>
                                    <% concesionarios.forEach(c => { %>
                                        <option value="<%= c.id_concesionario %>"><%= c.nombre %> - <%= c.ciudad %></option>
                                    <% }) %>
                                </select>
                            </div>
                            
                            <div class="col-md-12">
                                <label class="form-label">Nombre de archivo de imagen</label>
                                <input type="text" name="imagen" class="form-control" placeholder="ejemplo: tesla.jpg">
                                <div class="form-text">Dejar vacío para usar imagen por defecto.</div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-success">Guardar Vehículo</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>