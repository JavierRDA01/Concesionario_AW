<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>Gestión de Flota - Admin</title>
</head>
<body class="bg-light">
    
    <%- include('./barraNavegadora.ejs') %>

    <div class="container-fluid my-4">
        <div class="row">
            <div class="col-md-2 d-none d-md-block bg-white sidebar p-3 shadow-sm rounded me-3" style="min-height: 80vh;">
                <h5 class="text-muted">Menú Admin</h5>
                <hr>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a href="/admin/dashboard" class="nav-link text-dark">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/vehicles" class="nav-link active text-danger fw-bold bg-light rounded">
                            <i class="bi bi-car-front"></i> Gestión de Flota
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/dealerships" class="nav-link text-dark">
                            <i class="bi bi-building"></i> Concesionarios
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/users" class="nav-link text-dark">
                            <i class="bi bi-people"></i> Usuarios
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/reservations" class="nav-link text-dark">
                            <i class="bi bi-calendar-check"></i> Reservas
                        </a>
                    </li>
                </ul>
            </div>

            <main class="col-md-9 ms-sm-auto col-lg-9 px-md-4">
                
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="text-dark">Gestión de Flota</h2>
                    <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modalNuevoVehiculo">
                        <i class="bi bi-plus-circle"></i> Añadir Vehículo
                    </button>
                </div>

                <% if (typeof error_msg !== 'undefined' && error_msg) { %> 
                    <div class="alert alert-danger"><%= error_msg %></div>
                <% } %>

                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0 align-middle">
                                <thead class="bg-dark text-white">
                                    <tr>
                                        <th>Imagen</th>
                                        <th>Marca / Modelo</th>
                                        <th>Matrícula</th>
                                        <th>Concesionario</th>
                                        <th>Estado</th>
                                        <th class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% vehiculos.forEach(v => { %>
                                    <tr>
                                        <td>
                                            <div class="bg-secondary rounded d-flex align-items-center justify-content-center text-white" style="width: 50px; height: 35px;">
                                                <i class="bi bi-car-front-fill"></i>
                                            </div>
                                        </td>
                                        <td>
                                            <strong><%= v.marca %></strong> <%= v.modelo %>
                                            <br><small class="text-muted"><%= v.año_matriculacion %></small>
                                        </td>
                                        <td><span class="badge bg-light text-dark border"><%= v.matricula %></span></td>
                                        <td><%= v.nombre_concesionario %></td>
                                        <td>
                                            <% if(v.estado === 'disponible') { %>
                                                <span class="badge bg-success">Disponible</span>
                                            <% } else if(v.estado === 'mantenimiento') { %>
                                                <span class="badge bg-warning text-dark">Mantenimiento</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary"><%= v.estado %></span>
                                            <% } %>
                                        </td>
                                        <td class="text-end">
                                            <button class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i></button>
                                            <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <div class="modal fade" id="modalNuevoVehiculo" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="bi bi-car-front-fill"></i> Alta de Vehículo</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/admin/vehicles/new" method="POST">
                    <div class="modal-body">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Matrícula <span class="text-danger">*</span></label>
                                <input type="text" name="matricula" class="form-control" placeholder="1234-ABC" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Marca <span class="text-danger">*</span></label>
                                <input type="text" name="marca" class="form-control" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Modelo <span class="text-danger">*</span></label>
                                <input type="text" name="modelo" class="form-control" required>
                            </div>

                            <div class="col-md-3">
                                <label class="form-label fw-bold">Año</label>
                                <input type="number" name="anio" class="form-control" value="2023" min="2000" max="2030" required>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold">Plazas</label>
                                <input type="number" name="plazas" class="form-control" value="5" min="2" max="9" required>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold">Autonomía (km)</label>
                                <input type="number" name="autonomia" class="form-control" placeholder="400" required>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold">Color</label>
                                <input type="text" name="color" class="form-control" placeholder="Blanco">
                            </div>

                            <div class="col-12">
                                <label class="form-label fw-bold">Concesionario Asignado <span class="text-danger">*</span></label>
                                <select name="id_concesionario" class="form-select" required>
                                    <option value="" selected disabled>Selecciona una ubicación...</option>
                                    <% if (concesionarios && concesionarios.length > 0) { %>
                                        <% concesionarios.forEach(c => { %>
                                            <option value="<%= c.id_concesionario %>"><%= c.nombre %> (<%= c.ciudad %>)</option>
                                        <% }) %>
                                    <% } else { %>
                                        <option value="" disabled>No hay concesionarios disponibles</option>
                                    <% } %>
                                </select>
                            </div>
                            
                            <div class="col-12">
                                <label class="form-label fw-bold">Nombre de imagen</label>
                                <input type="text" name="imagen" class="form-control" placeholder="ej: tesla_model3.jpg">
                                <div class="form-text">Deja vacío para usar la imagen por defecto.</div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-danger">Guardar Vehículo</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>