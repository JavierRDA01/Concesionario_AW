<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>Gesti칩n de Flota - Admin</title>
</head>
<body class="bg-light">
    
    <%- include('./barraNavegadora.ejs') %>

    <div class="container-fluid my-4">
        <div class="row">
            <div class="col-md-2 d-none d-md-block bg-white sidebar p-3 shadow-sm rounded me-3" style="min-height: 80vh;">
                <h5 class="text-muted">Men칰 Admin</h5>
                <hr>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a href="/admin/dashboard" class="nav-link text-dark">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/vehicles" class="nav-link active text-danger fw-bold bg-light rounded">
                            <i class="bi bi-car-front"></i> Gesti칩n de Flota
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/dealerships" class="nav-link text-dark">
                            <i class="bi bi-building"></i> Concesionarios
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/users" class="nav-link text-dark">
                            <i class="bi bi-people"></i> Usuarios
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/reservations" class="nav-link text-dark">
                            <i class="bi bi-calendar-check"></i> Reservas
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/admin/import" class="nav-link text-dark">
                            <i class="bi bi-cloud-upload"></i> Carga de Datos
                        </a>
                    </li>
                </ul>
            </div>

            <main class="col-md-9 ms-sm-auto col-lg-9 px-md-4">
                
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="text-dark">Gesti칩n de Flota</h2>
                    <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modalNuevoVehiculo">
                        <i class="bi bi-plus-circle"></i> A침adir Veh칤culo
                    </button>
                </div>

                <div id="alertaDinamica"></div>

                <div class="card shadow-sm border-top">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0 align-middle">
                                <thead class="bg-dark text-white">
                                    <tr>
                                        <th>Imagen</th>
                                        <th>Marca / Modelo</th>
                                        <th>Matr칤cula</th>
                                        <th>Concesionario</th>
                                        <th>Estado</th>
                                        <th class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody id="tbodyVehiculos">
                                    <% if(vehiculos.length === 0) { %>
                                        <tr id="filaSinDatos"><td colspan="6" class="text-center py-3">No hay veh칤culos registrados.</td></tr>
                                    <% } else { %>
                                        <% vehiculos.forEach(v => { %>
                                        <tr id="fila-<%= v.id_vehiculo %>">
                                            <td>
                                                <% if(v.imagen && v.imagen !== 'default_car.jpg') { %>
                                                    <img src="/img/<%= v.imagen %>" class="rounded border" style="width: 50px; height: 35px; object-fit: cover;">
                                                <% } else { %>
                                                    <div class="bg-white border rounded d-flex align-items-center justify-content-center text-secondary" style="width: 50px; height: 35px;">
                                                        <i class="bi bi-car-front-fill"></i>
                                                    </div>
                                                <% } %>
                                            </td>
                                            <td>
                                                <strong><%= v.marca %></strong> <%= v.modelo %>
                                                <br><small class="text-muted">A침o: <%= v.a침o_matriculacion %></small>
                                            </td>
                                            <td><span class="badge bg-light text-dark border"><%= v.matricula %></span></td>
                                            <td><%= v.nombre_concesionario %></td>
                                            <td id="celda-estado-<%= v.id_vehiculo %>">
                                                <% if(v.estado === 'disponible') { %>
                                                    <span class="badge bg-success">Disponible</span>
                                                <% } else if(v.estado === 'mantenimiento') { %>
                                                    <span class="badge bg-warning text-dark">Mantenimiento</span>
                                                <% } else { %>
                                                    <span class="badge bg-danger">Reservado</span>
                                                <% } %>
                                            </td>
                                            <td class="text-end">
                                                <button class="btn btn-sm btn-outline-dark me-1" 
                                                        onclick="abrirModalEstado('<%= v.id_vehiculo %>', '<%= v.estado %>', '<%= v.matricula %>')"
                                                        title="Cambiar Estado">
                                                    <i class="bi bi-gear-fill"></i>
                                                </button>
                                                
                                                <button class="btn btn-sm btn-outline-primary me-1" 
                                                        onclick='abrirModalEditar(<%- JSON.stringify(v) %>)'
                                                        title="Editar Detalles">
                                                    <i class="bi bi-pencil"></i>
                                                </button>

                                                <button class="btn btn-sm btn-outline-danger" 
                                                        onclick="abrirModalBorrar('<%= v.id_vehiculo %>', '<%= v.matricula %>')"
                                                        title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                        <% }) %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <div class="modal fade" id="modalNuevoVehiculo" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="bi bi-car-front-fill"></i> Alta de Veh칤culo</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="formNuevoVehiculo" enctype="multipart/form-data">
                    <div class="modal-body">
                        <div id="errorNuevo" class="alert alert-danger d-none"></div>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Matr칤cula <span class="text-danger">*</span></label>
                                <input type="text" name="matricula" class="form-control" placeholder="9900-NOP" pattern="[0-9]{4}-[A-Z]{3}" oninput="this.value = this.value.toUpperCase()" maxlength="8" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Marca <span class="text-danger">*</span></label>
                                <input type="text" name="marca" class="form-control" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Modelo <span class="text-danger">*</span></label>
                                <input type="text" name="modelo" class="form-control" required>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold">A침o</label>
                                <input type="number" name="anio" class="form-control" value="2023" min="2000" max="2030" required>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold">Plazas</label>
                                <input type="number" name="plazas" class="form-control" value="5" min="2" max="9" required>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold">Autonom칤a (km)</label>
                                <input type="number" name="autonomia" class="form-control" placeholder="400" required>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold">Color</label>
                                <input type="text" name="color" class="form-control" placeholder="Blanco">
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-bold">Concesionario Asignado <span class="text-danger">*</span></label>
                                <select name="id_concesionario" class="form-select" required>
                                    <option value="" selected disabled>Selecciona una ubicaci칩n...</option>
                                    <% if (concesionarios && concesionarios.length > 0) { %>
                                        <% concesionarios.forEach(c => { %>
                                            <option value="<%= c.id_concesionario %>"><%= c.nombre %> (<%= c.ciudad %>)</option>
                                        <% }) %>
                                    <% } %>
                                </select>
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-bold">Imagen del veh칤culo</label>
                                <input type="file" name="imagen" class="form-control" accept="image/*">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" id="btnGuardarNuevo" class="btn btn-danger">Guardar Veh칤culo</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalEditarVehiculo" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title"><i class="bi bi-pencil-square"></i> Editar Veh칤culo</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="formEditarVehiculo" enctype="multipart/form-data">
                    <input type="hidden" name="id_vehiculo" id="edit_id">
                    <input type="hidden" name="current_imagen" id="edit_current_imagen">

                    <div class="modal-body">
                        <div id="errorEdit" class="alert alert-danger d-none"></div>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Matr칤cula</label>
                                <input type="text" name="matricula" id="edit_matricula" class="form-control" pattern="[0-9]{4}-[A-Z]{3}" oninput="this.value = this.value.toUpperCase()" maxlength="8" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Marca</label>
                                <input type="text" name="marca" id="edit_marca" class="form-control" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Modelo</label>
                                <input type="text" name="modelo" id="edit_modelo" class="form-control" required>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold">A침o</label>
                                <input type="number" name="anio" id="edit_anio" class="form-control" required>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold">Plazas</label>
                                <input type="number" name="plazas" id="edit_plazas" class="form-control" required>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold">Autonom칤a</label>
                                <input type="number" name="autonomia" id="edit_autonomia" class="form-control" required>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold">Color</label>
                                <input type="text" name="color" id="edit_color" class="form-control">
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-bold">Concesionario</label>
                                <select name="id_concesionario" id="edit_concesionario" class="form-select" required>
                                    <% if (concesionarios && concesionarios.length > 0) { %>
                                        <% concesionarios.forEach(c => { %>
                                            <option value="<%= c.id_concesionario %>"><%= c.nombre %> (<%= c.ciudad %>)</option>
                                        <% }) %>
                                    <% } %>
                                </select>
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-bold">Imagen</label>
                                <div class="d-flex align-items-center mb-2 p-2 border rounded bg-light">
                                    <img id="edit_preview" src="" alt="Vista previa" class="me-3 rounded" style="width: 80px; height: 60px; object-fit: cover;">
                                    <div class="small text-muted" id="edit_filename_text">Ninguna imagen seleccionada</div>
                                </div>
                                <input type="file" name="imagen" id="edit_imagen_input" class="form-control" accept="image/*">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" id="btnGuardarEdicion" class="btn btn-primary">Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalEstadoVehiculo" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title"><i class="bi bi-gear-fill"></i> Gestionar Estado</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="formEstado">
                    <div class="modal-body">
                        <p>Est치s cambiando el estado del veh칤culo con matr칤cula: <strong id="spanMatricula"></strong></p>
                        <input type="hidden" name="id_vehiculo" id="inputEstadoId">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Selecciona el nuevo estado:</label>
                            <select name="nuevo_estado" id="selectEstado" class="form-select">
                                <option value="disponible">游릭 Disponible</option>
                                <option value="mantenimiento">游 Mantenimiento (Taller)</option>
                                <option value="reservado">游댮 Reservado (Manual)</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" id="btnGuardarEstado" class="btn btn-dark">Actualizar Estado</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalBorrarVehiculo" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="bi bi-exclamation-triangle-fill"></i> Eliminar Veh칤culo</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="formBorrar">
                    <div class="modal-body">
                        <div id="errorBorrar" class="alert alert-danger d-none"></div>
                        <p class="text-center">쮼st치s seguro de que quieres eliminar el veh칤culo con matr칤cula <strong id="delete_matricula"></strong>?</p>
                        <p class="text-center text-danger small">Esta acci칩n no se puede deshacer.</p>
                        <input type="hidden" name="id_vehiculo" id="delete_id">
                    </div>
                    <div class="modal-footer bg-light justify-content-center">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" id="btnConfirmarBorrar" class="btn btn-danger">S칤, Eliminar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // =====================
        // FUNCIONES AUXILIARES
        // =====================
        
        function mostrarAlerta(mensaje, tipo) {
            const html = `
                <div class="alert alert-${tipo} alert-dismissible fade show shadow-sm border-start border-${tipo} border-4" role="alert">
                    <i class="bi bi-${tipo === 'success' ? 'check-circle' : 'exclamation-triangle'}-fill me-2"></i> ${mensaje}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>`;
            $("#alertaDinamica").html(html);
        }

        function generarHTMLFila(v, nombreConcesionario) {
            let badgeEstado = '';
            if(v.estado === 'disponible') badgeEstado = '<span class="badge bg-success">Disponible</span>';
            else if(v.estado === 'mantenimiento') badgeEstado = '<span class="badge bg-warning text-dark">Mantenimiento</span>';
            else badgeEstado = '<span class="badge bg-danger">Reservado</span>';

            let imgTag = (v.imagen && v.imagen !== 'default_car.jpg') 
                ? `<img src="/img/${v.imagen}" class="rounded border" style="width: 50px; height: 35px; object-fit: cover;">`
                : `<div class="bg-white border rounded d-flex align-items-center justify-content-center text-secondary" style="width: 50px; height: 35px;"><i class="bi bi-car-front-fill"></i></div>`;

            // Escapar comillas para el JSON del onclick
            const vString = JSON.stringify(v).replace(/"/g, '&quot;');

            return `
                <td>${imgTag}</td>
                <td><strong>${v.marca}</strong> ${v.modelo}<br><small class="text-muted">A침o: ${v.a침o_matriculacion || v.anio}</small></td>
                <td><span class="badge bg-light text-dark border">${v.matricula}</span></td>
                <td>${nombreConcesionario}</td>
                <td id="celda-estado-${v.id_vehiculo}">${badgeEstado}</td>
                <td class="text-end">
                    <button class="btn btn-sm btn-outline-dark me-1" onclick="abrirModalEstado('${v.id_vehiculo}', '${v.estado}', '${v.matricula}')"><i class="bi bi-gear-fill"></i></button>
                    <button class="btn btn-sm btn-outline-primary me-1" onclick="abrirModalEditar(${vString})"><i class="bi bi-pencil"></i></button>
                    <button class="btn btn-sm btn-outline-danger" onclick="abrirModalBorrar('${v.id_vehiculo}', '${v.matricula}')"><i class="bi bi-trash"></i></button>
                </td>
            `;
        }

        // =====================
        // GESTI칍N DE MODALES
        // =====================

        function abrirModalEstado(id, estadoActual, matricula) {
            $("#inputEstadoId").val(id);
            $("#selectEstado").val(estadoActual);
            $("#spanMatricula").text(matricula);
            const modal = new bootstrap.Modal(document.getElementById('modalEstadoVehiculo'));
            modal.show();
        }

        function abrirModalEditar(vehiculo) {
            $("#edit_id").val(vehiculo.id_vehiculo);
            $("#edit_matricula").val(vehiculo.matricula);
            $("#edit_marca").val(vehiculo.marca);
            $("#edit_modelo").val(vehiculo.modelo);
            $("#edit_anio").val(vehiculo.a침o_matriculacion || vehiculo.anio);
            $("#edit_plazas").val(vehiculo.numero_plazas);
            $("#edit_autonomia").val(vehiculo.autonomia_km);
            $("#edit_color").val(vehiculo.color);
            $("#edit_concesionario").val(vehiculo.id_concesionario);
            $("#edit_current_imagen").val(vehiculo.imagen);

            // Previsualizaci칩n imagen
            if(vehiculo.imagen && vehiculo.imagen !== 'default_car.jpg') {
                $("#edit_preview").attr("src", "/img/" + vehiculo.imagen);
                $("#edit_filename_text").text("Imagen actual");
            } else {
                $("#edit_preview").attr("src", "https://placehold.co/600x400?text=Sin+Imagen");
                $("#edit_filename_text").text("Usando imagen por defecto");
            }

            $("#errorEdit").addClass("d-none");
            const modal = new bootstrap.Modal(document.getElementById('modalEditarVehiculo'));
            modal.show();
        }

        function abrirModalBorrar(id, matricula) {
            $("#delete_id").val(id);
            $("#delete_matricula").text(matricula);
            $("#errorBorrar").addClass("d-none");
            const modal = new bootstrap.Modal(document.getElementById('modalBorrarVehiculo'));
            modal.show();
        }

        // =====================
        // PETICIONES AJAX (jQuery)
        // =====================

        $(document).ready(function() {

            // 1. CREAR VEH칈CULO (Multipart Form)
            $("#btnGuardarNuevo").click(function() {
                // Usamos FormData para el env칤o de archivos
                let formData = new FormData(document.getElementById("formNuevoVehiculo"));
                
                // Obtener texto del concesionario para la tabla
                let nombreConc = $("#formNuevoVehiculo select[name='id_concesionario'] option:selected").text();

                $.ajax({
                    url: '/admin/vehicles/new',
                    type: 'POST',
                    data: formData,
                    processData: false, // Importante para FormData
                    contentType: false, // Importante para FormData
                    success: function(data) {
                        if(data.success) {
                            // Cerrar modal
                            bootstrap.Modal.getInstance(document.getElementById('modalNuevoVehiculo')).hide();
                            $("#formNuevoVehiculo")[0].reset();
                            $("#filaSinDatos").remove();

                            // A침adir fila
                            let nuevaFila = `<tr id="fila-${data.vehiculo.id_vehiculo}">${generarHTMLFila(data.vehiculo, nombreConc)}</tr>`;
                            $("#tbodyVehiculos").prepend(nuevaFila);
                            
                            mostrarAlerta("Veh칤culo creado correctamente.", "success");
                        }
                    },
                    error: function(jqXHR) {
                        let msg = jqXHR.responseJSON ? jqXHR.responseJSON.message : "Error al crear veh칤culo";
                        $("#errorNuevo").text(msg).removeClass("d-none");
                    }
                });
            });

            // 2. EDITAR VEH칈CULO (Multipart Form)
            $("#btnGuardarEdicion").click(function() {
                let formData = new FormData(document.getElementById("formEditarVehiculo"));
                let nombreConc = $("#formEditarVehiculo select[name='id_concesionario'] option:selected").text();

                $.ajax({
                    url: '/admin/vehicles/edit',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(data) {
                        if(data.success) {
                            bootstrap.Modal.getInstance(document.getElementById('modalEditarVehiculo')).hide();
                            
                            // Actualizar fila
                            $("#fila-" + data.vehiculo.id_vehiculo).html(generarHTMLFila(data.vehiculo, nombreConc));
                            
                            mostrarAlerta("Veh칤culo actualizado correctamente.", "success");
                        }
                    },
                    error: function(jqXHR) {
                        let msg = jqXHR.responseJSON ? jqXHR.responseJSON.message : "Error al editar veh칤culo";
                        $("#errorEdit").text(msg).removeClass("d-none");
                    }
                });
            });

            // 3. CAMBIAR ESTADO (JSON)
            $("#btnGuardarEstado").click(function() {
                // Serializar formulario a objeto JSON
                let datos = {
                    id_vehiculo: $("#inputEstadoId").val(),
                    nuevo_estado: $("#selectEstado").val()
                };

                $.ajax({
                    url: '/admin/vehicles/status',
                    type: 'POST',
                    contentType: 'application/json', // Como dice la presentaci칩n (Slide 80)
                    data: JSON.stringify(datos),
                    success: function(data) {
                        if(data.success) {
                            bootstrap.Modal.getInstance(document.getElementById('modalEstadoVehiculo')).hide();
                            
                            let celda = $("#celda-estado-" + datos.id_vehiculo);
                            if(datos.nuevo_estado === 'disponible') celda.html('<span class="badge bg-success">Disponible</span>');
                            else if(datos.nuevo_estado === 'mantenimiento') celda.html('<span class="badge bg-warning text-dark">Mantenimiento</span>');
                            else celda.html('<span class="badge bg-danger">Reservado</span>');

                            mostrarAlerta("Estado actualizado.", "success");
                        }
                    },
                    error: function() {
                        alert("Error al cambiar el estado.");
                    }
                });
            });

            // 4. BORRAR VEH칈CULO (JSON)
            $("#btnConfirmarBorrar").click(function() {
                let id = $("#delete_id").val();

                $.ajax({
                    url: '/admin/vehicles/delete',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ id_vehiculo: id }),
                    success: function(data) {
                        if(data.success) {
                            bootstrap.Modal.getInstance(document.getElementById('modalBorrarVehiculo')).hide();
                            $("#fila-" + id).fadeOut(function() { $(this).remove(); });
                            mostrarAlerta("Veh칤culo eliminado.", "success");
                        }
                    },
                    error: function(jqXHR) {
                        let msg = jqXHR.responseJSON ? jqXHR.responseJSON.message : "Error al eliminar";
                        $("#errorBorrar").text(msg).removeClass("d-none");
                    }
                });
            });

        });
    </script>
